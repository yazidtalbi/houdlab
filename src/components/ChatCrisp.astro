---
const CRISP_ID = import.meta.env.PUBLIC_CRISP_ID || "YOUR_CRISP_WEBSITE_ID";
---

<script is:inline>
  window.$crisp = [];
  window.CRISP_WEBSITE_ID = "{CRISP_ID}";
  (function () {
    const d = document;
    const s = d.createElement("script");
    s.src = "https://client.crisp.chat/l.js";
    s.async = 1;
    s.defer = 1;
    d.head.appendChild(s);
  })();
</script>
