---
import "../styles/global.css";
import VideoReel from "../components/VideoReel";
import ChatCrisp from "../components/ChatCrisp.astro";
import TestimonialsMarquee from "../components/TestimonialsMarquee";
import ChatPanel from "../components/ChatPanel";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Houd Lab — Establishing Brands & Products</title>
    <meta
      name="description"
      content="Chat with a design expert and get your project scope in minutes."
    />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- OG / Twitter -->
    <meta property="og:type" content="website" />
    <meta
      property="og:title"
      content="Houd Lab — Establishing Brands & Products"
    />
    <meta
      property="og:description"
      content="Chat with a design expert and get your project scope in minutes."
    />
    <meta property="og:image" content="/og.jpg" />
    <meta name="twitter:card" content="summary_large_image" />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter+Display:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="bg-[#FFF9F0] text-neutral-900 font-display">
    <div
      class="absolute inset-0 -z-10 bg-[radial-gradient(1200px_600px_at_10%_-10%,rgba(255,224,130,0.06),transparent_60%)]"
    >
    </div>

    <main class="max-w-8xl mx-auto px-4 md:px-12 py-12">
      <section class="grid grid-cols-12 gap-8 items-start">
        <!-- 1) Empty column (2) — shows background -->
        <div class="col-span-2 hidden md:block"></div>

        <!-- 2) Chat column (7) -->
        <div class="col-span-12 md:col-span-7 pl-10">
          <ChatPanel client:load />
        </div>

        <!-- 3) Video + description column (3) -->
        <aside class="col-span-12 md:col-span-3 flex flex-col gap-4">
          <!-- Description -->
          <div class="mt-10 mb-5">
            <p
              class="text-neutral-800 max-w-prose font-display leading-snug font-semibold"
            >
              We’re a Tech & Design agency, <br />based in Casablanca, Morocco. <br
              />We focus on delivering Design and <br /> Frontend Development Services.
            </p>
          </div>

          <!-- Video -->
          <div class="aspect-video rounded-2xl overflow-hidden bg-neutral-200">
            <video
              src="/reels/demo.mp4"
              autoplay
              muted
              loop
              playsinline
              class="w-full h-full object-cover"></video>
          </div>
        </aside>
      </section>
    </main>

    <main class="max-w-4xl mx-auto p-4 md:p-8"></main>
    <main
      class="max-w-7xl mx-auto px-6 py-12 grid md:grid-cols-2 gap-10 items-start"
    >
      <section class="space-y-6">
        <h1
          class="font-display text-4xl md:text-6xl font-semibold leading-[1.1] tracking-[-0.02em]"
        >
          ESTABLISHING <span class="text-amber-500">BRANDS</span> & <span
            class="text-amber-500">PRODUCTS</span
          >
        </h1>
        <p>
          Chat with an expert right now and get your project scope in minutes.
        </p>

        <form class="mt-4 flex gap-2">
          <input
            class="flex-1 rounded-xl border px-4 py-3"
            placeholder="I want to create a makeup brand…"
          />
          <button class="px-5 py-3 rounded-xl bg-neutral-900 text-white"
            >Send</button
          >
        </form>
      </section>

      <aside>
        <VideoReel client:load />
      </aside>
    </main>
    <div class="mt-10">
      <h2 class="text-2xl md:text-3xl font-semibold text-center mt-16 mb-3">
        Best-Seller Worldwide
      </h2>
      <p class="text-center opacity-70 mb-8">Clients are satisfied</p>
      <TestimonialsMarquee client:load />
    </div>
  </body>
</html>
