---
export const prerender = false;
---

<html>
  <head>
    <meta charset="utf-8" />
    <title>Admin Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>
  <body class="flex items-center justify-center h-screen bg-neutral-100">
    <form
      method="POST"
      action="/api/admin/login"
      class="bg-white p-6 rounded-2xl shadow w-80"
    >
      <h1 class="text-lg font-semibold mb-4">Admin Login</h1>
      <input
        type="password"
        name="password"
        placeholder="Password"
        class="w-full border rounded px-3 py-2 mb-3"
        autocomplete="current-password"
      />
      <button type="submit" class="w-full bg-black text-white py-2 rounded">
        Login
      </button>
    </form>
  </body>
</html>
